---
import Link from '@/components/Link.astro'
import Particles from '@/components/Particles.astro'
import Layout from '@/layouts/Layout.astro'
---

<Layout>
  <div class="size-full">
    <div>
      <Particles />
    </div>

    <div class="flex size-full items-center justify-center text-center">
      <div>
        <p class="md:text-10xl text-8xl font-medium tracking-tight text-white">
          Max Wo
        </p>
        <p class="text-xl text-white md:text-4xl">
          Full stack software engineer
        </p>

        <div class="flex items-center justify-center gap-8 md:gap-12">
          <Link url="https://github.com/maxwowo">
            <svg
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
